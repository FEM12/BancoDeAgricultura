<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="sv.edu.udb.www.entities.Referenciapersonal" table="referenciapersonal" schema="bancodeagricultura">
        <id name="id">
            <column name="ID" sql-type="int"/>
        </id>
        <property name="nombre">
            <column name="Nombre" sql-type="varchar(250)" length="250"/>
        </property>
        <property name="relacion">
            <column name="Relacion" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="telefonoMovil">
            <column name="TelefonoMovil" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="direccion">
            <column name="Direccion" sql-type="text"/>
        </property>
        <property name="idCliente">
            <column name="ID_Cliente" sql-type="int" not-null="true"/>
        </property>
        <property name="idDependiente">
            <column name="ID_Dependiente" sql-type="int" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>